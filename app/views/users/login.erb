<% if flash[:unsuccessful_login]%>
  <h3><%= flash[:unsuccessful_login] %> </h3>
<% end %>

<% if flash[:successful_signup]%>
  <h3><%= flash[:successful_signup] %> </h3>
<% end %>

<h4>Please enter your credentials below to Log In:</h4>
</br>

<form action="/login" method="POST">
  <label for="email">Email: </label>
  <input type="text" name="email">
  </br>
  <label for="password">Password: </label>
  <input type="password" name="password">
  <br></br>
  <input type="submit" value="Log In">
</form>
</br>

<div>
  <small><a href="/">Back to Home Page</a></small>
</div>     