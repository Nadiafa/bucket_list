  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>BucketList</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav>
      <% if logged_in? %>
        <a href="/users/<%= current_user.id %>">My Items</a>
        <a href="/new">Create New Item</a>
        <a href="/items">See All Items</a>
        <a href="/logout">Log Out</a>
      <% else %>
        <a href="/">Home</a>
        <a href='/signup'>Sign Up</a>
        <a href='/login'>Log In</a>
      <% end %>
    </nav>

    <div class="flash-message"> 
      <% if flash[:warning] %>
        <h3 class="warning"><%= flash[:warning] %></h3>
      <% elsif flash[:success] %>
        <h3 class="confirmation"><%= flash[:success] %></h3>
      <% elsif flash[:info] %>
        <h3><%= flash[:info] %></h3>
      <% end %>
    </div>

    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2018 <strong>BucketList</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
